load("//bazel/js:defaults.bzl", "build_host", "pkg_web")

build_host(
    data = [
        "DynamicComponent.jsx",
        "Route.jsx",
        "bootstrap.jsx",
        "capabilities/preload.js",
        "host.jsx",
        "//src/utils:__pkg__",
    ],
    entry = "./$(execpath host.jsx)",
)

pkg_web(
    name = "host",
    srcs = [
        ":host_build",
    ],
    additional_root_paths = ["%s/host_build" % package_name()],
    visibility = ["//src/client:__pkg__"],
)
